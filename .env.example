# Flask Configuration
FLASK_APP=app
FLASK_ENV=development
SECRET_KEY=your-secret-key-here

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/dbname

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Zoho Configuration
ZOHO_CLIENT_ID=your-zoho-client-id
ZOHO_CLIENT_SECRET=your-zoho-client-secret
ZOHO_REDIRECT_URI=http://localhost:5000/zoho/callback
ZOHO_ORG_ID=your-organization-id


# Application Settings
APP_NAME="Smart Inventory Manager"
APP_URL=http://localhost:5000
ADMIN_EMAIL=admin@example.com

# Security Settings
PASSWORD_RESET_EXPIRATION=3600  # 1 hour in seconds
EMAIL_VERIFICATION_EXPIRATION=86400  # 24 hours in seconds
SESSION_LIFETIME=3600  # 1 hour in seconds

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Azure Computer Vision Configuration
AZURE_VISION_KEY=your-azure-vision-key
AZURE_VISION_ENDPOINT=https://your-endpoint.cognitiveservices.azure.com/ 

# Backup Configuration
BACKUP_DIR=scripts/db/backups
BACKUP_FILENAME_PREFIX=expiry_tracker_v2_backup
BACKUP_RETENTION_DAYS=30 